@model ASF.ERP.Attendance.Models.AttendanceEvents

@{
    string version = typeof(ASF.ERP.Attendance.MvcApplication).Assembly.GetName().Version.ToString();
}

@section scripts{
    @Scripts.RenderFormat("<script src=\"{0}?nocache=" + version + "\"></script>", "~/Scripts/softlution/CollaboratorVacationsCommon.js")
}



<h3 class="mt-2">Detalle</h3>
<hr>
<div class="card">
    <div class="card-body">
        
        <form class="row g-3">
            <div class="row pt-3">
                <div class="col-md-2">
                    <label>Folio:</label>
                    <div class="form-group">
                        <input type="text" value="@Html.DisplayFor(m => m.EventId)" class="form-control" readonly />
                    </div>
                </div>
            </div>

            <div class="row pt-3 justify-content-between">
                <div class="col-2">
                    <label>No. Colaborador:</label>
                    <div class="form-group">
                        @Html.EditorFor(m => m.CollaboratorId, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    </div>
                </div>

                <div class="col-4">
                    <label>Fecha / Hora de registro:</label>
                    <div class="form-group">
                        @Html.EditorFor(m => m.Datetime, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <label for="inputEmail5" class="form-label">Nombre:</label>
                @Html.EditorFor(m => m.Collaborators.Firstname, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            </div>
            <div class="col-md-6">
                <label for="inputPassword5" class="form-label">Puesto:</label>
                @Html.EditorFor(m => m.Collaborators.CollaboratorJobPositions.Name, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            </div>

            <div class="col-md-6">
                <label for="inputEmail5" class="form-label">Centro de Trabajo:</label>
                @Html.EditorFor(m => m.CostCenters.WorkCenters.Name, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            </div>
            <div class="col-md-6">
                <label for="inputPassword5" class="form-label">Centro de Costos:</label>
                @Html.EditorFor(m => m.CostCenters.Name, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            </div>
            <div class="col-md-6">
                <label for="inputEmail5" class="form-label">Admin. Sesión (Supervisor):</label>
                @Html.EditorFor(m => m.AttendanceSessions.Collaborators.Firstname, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            </div>
            <div class="col-md-6">
                <label for="inputPassword5" class="form-label">Ubicación:</label>
                @Html.EditorFor(m => m.CostCenters.WorkCenters.AttendanceLocations.Description, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            </div>
            <div class="col-md-6">
                <label for="inputEmail5" class="form-label">Inicio de sesión:</label>
                @Html.EditorFor(m => m.AttendanceSessions.StartAS, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            </div>
            <div class="col-md-6">
                <label for="inputPassword5" class="form-label">Fin de sesión:</label>
                @Html.EditorFor(m => m.AttendanceSessions.EndAS, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
            </div>
            <div class="text-center">
                <button type="button" class="btn btn-dark" onclick="window.location.href='@Url.Action("Index", "Home")'">Regresar</button>
            </div>
        </form>

    </div>
</div>


